<h1><%= @task.title %></h1>
<h2>Details</h2>
<p><%= @task.details %></p>

<%= link_to 'Modify', edit_task_path(@task), class: 'btn btn-primary' %> |
<%= link_to "Delete", task_path(@task), class: 'btn btn-danger',
  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %> |
<%= link_to "Go back", tasks_path, class: 'btn btn-primary' %>
